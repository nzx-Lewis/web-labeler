{
  "manifest_version": 3,
  "name": "WebLabeler: Environment Marker & Indicator",
  "description": "Label your projects easily and avoid confusing production with test or development environments",
  "version": "1.3",
  "icons": {
    "16": "/icon/icon-16.png",
    "32": "/icon/icon-32.png",
    "48": "/icon/icon-48.png",
    "128": "/icon/icon-128.png"
  },
  "options_page": "/index.html",
  "action": {
    "default_popup": "/index.html#popup"
  },
  "content_scripts": [
    {
      "js": [
        "assets/contentScript.js"
      ],
      "css": [
        "assets/contentScript.css"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}